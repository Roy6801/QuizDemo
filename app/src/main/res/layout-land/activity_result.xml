<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="@drawable/theme_quiz_land"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/won"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#64ff2b"
        android:text="YOU WON"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#174f02"
        android:layout_margin="10dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/lost"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ff0022"
        android:text="YOU LOST"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tie"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#4287f5"
        android:text="IT'S A TIE"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#174f02"
        android:layout_margin="10dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/p1_score"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/gold"
        android:text="P1 Score"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#362804"
        android:layout_margin="10dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/p2_score"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/gold"
        android:text="P2 Score"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#362804"
        android:layout_margin="10dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"/>

</LinearLayout>